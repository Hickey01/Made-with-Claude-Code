# Okta Configuration for MCP Server Authentication
# Copy this file to .env and fill in your actual values

# Okta Authorization Server Issuer URL
# Format: https://{yourOktaDomain}/oauth2/{authorizationServerId}
# Example: https://chghealthcare.okta.com/oauth2/default
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default

# Okta API Audience
# This is the identifier for your API/resource server configured in Okta
# Example: api://default or https://mcp.chghealthcare.com
OKTA_AUDIENCE=api://default

# Okta Client ID (for client credentials flow or service-to-service auth)
# Find this in: Applications → Your Application → General
OKTA_CLIENT_ID=your_client_id_here

# Okta Client Secret (optional, for service-to-service authentication)
# Find this in: Applications → Your Application → General → Client Secrets
# SECURITY: Never commit this to version control!
OKTA_CLIENT_SECRET=your_client_secret_here

# Optional: Custom scopes required for MCP access
# MCP_REQUIRED_SCOPES=openid,profile,email,mcp:access

# Tableau Configuration (Optional - for Tableau integration)
# Tableau Server URL
# Example: https://tableau.chghealthcare.com
TABLEAU_SERVER_URL=https://your-tableau-server.com

# Tableau Site ID (leave empty for default site)
TABLEAU_SITE_ID=

# Option 1: Personal Access Token (Recommended)
TABLEAU_TOKEN_NAME=your_token_name
TABLEAU_TOKEN_VALUE=your_token_value

# Option 2: Username/Password (Alternative)
# TABLEAU_USERNAME=your_username
# TABLEAU_PASSWORD=your_password

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
